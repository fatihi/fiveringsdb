@{
    ViewData["Title"] = "Cards";
}

@model FiveRingsDb.Views.Cards.CardsListViewModel

@section Scripts {
    <script>
        $(function() {
            $('[data-toggle="popover"]').popover();
        });
    </script>
}

@section CustomCss {
    <link rel="stylesheet" href="~/css/card-page.css"/>
}

<h2>Cards</h2>

<div class="table-responsive">
    <table class="table table table-hover table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Clan</th>
                <th>Type</th>
                <th>Traits</th>
                <th>Deck</th>
                <th>Cost</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var card in Model.Cards)
            {
                <tr>
                    <td>
                        <span title="@card.CardType" class="@Model.GetIconClasses(card)"></span>
                        <a asp-controller="Cards"
                           asp-action="Card"
                           asp-route-id="@card.Id"
                           data-html="true"
                           data-toggle="popover"
                           data-placement="right"
                           data-trigger="hover"
                           data-container="body"
                           data-content='@await Html.PartialAsync("_CardPopover", card)'>
                            @card.Name
                        </a>
                    </td>
                    <td>@card.Clan</td>
                    <td>@card.CardType</td>
                    <td>
                        <span>@string.Join(", ", card.Traits)</span>
                    </td>
                    <td>@card.Side</td>
                    <td>
                        <span>@Model.GetCost(card)</span>
                    </td>
                    <td>
                        <span>@Model.GetValues(card)</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>